extends ../../layout

block contenido
  head
    title Cargar más horarios
    link(rel="stylesheet", href="/css/styles.css")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet")

  body.bg-light.py-5
    .container
      .row.justify-content-center
        .col-md-8.col-lg-6
          .card.shadow
            .card-body
              h1.text-center.mb-4.text-primary Cargar horarios 

              form(action="/create-schedule-batch" method="POST")
                input(type="hidden" name="id_agenda" value=id_agenda)

                .mb-3
                  label.form-label(for="hora_inicio") Hora de Inicio:
                  input.form-control(type="time" name="hora_inicio" required)

                .mb-3
                  label.form-label(for="hora_fin") Hora de Fin:
                  input.form-control(type="time" name="hora_fin" required)

                .mb-3
                  label.form-label(for="duracion_turno") Duración del Turno (en minutos):
                  input.form-control(type="number" name="duracion_turno" required)

                .mb-3
                  label.form-label(for="rango_fechas_inicio") Fecha de Inicio:
                  input.form-control(type="date" name="rango_fechas_inicio" required)

                .mb-3
                  label.form-label(for="rango_fechas_fin") Fecha de Fin:
                  input.form-control(type="date" name="rango_fechas_fin" required)

                .d-grid
                  button.btn.btn-primary(type="submit") Generar Horarios



