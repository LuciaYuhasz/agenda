doctype html
html(lang="es")
  head
    title Sucursal Centro - Elección de Usuario
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css", rel="stylesheet")
    link(rel="stylesheet", href="/styles.css")
    style.
      body {
        background-color: #f8f9fa;
        font-size: 1.1rem;
      }
      .card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 15px;
        padding: 30px; /* más espacio interno */
        font-size: 1.2rem; /* agranda el texto interno */
        border-radius: 18px; /* bordes más redondeados */
      }
      .btn-primary {
        font-size: 1rem;
        font-weight: bold;
        padding: 10px 20px;
        border-radius: 10px;
      }


      .card:hover {
        transform: scale(1.05);
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.3);
      }
      .icon-large {
        font-size: 50px;
        color: #0d6efd;
        margin-bottom: 15px;
      }
  body
    .container.my-5
      h1.text-center.mb-4 Bienvenido a Agenda Médica
      h4.text-center.mb-4 Seleccione su tipo de usuario

      .row.justify-content-center
        .col-md-4.mb-4
          .card.text-center.shadow-sm
            .card-body
              i.icon-large.bi.bi-person-fill
              
              p.card-text Accede a tus turnos y datos médicos.
              a.btn.btn-primary(href="/login") INGRESAR COMO PACIENTE
        .col-md-4.mb-4
          .card.text-center.shadow-sm
            .card-body
              i.icon-large.bi.bi-person-badge
              
              p.card-text Gestiona la agenda médica.
              a.btn.btn-primary(href="/administrador/login") INGRESAR COMO ADMINISTRADOR
        .col-md-4.mb-4
          .card.text-center.shadow-sm
            .card-body
              i.icon-large.bi.bi-briefcase
              
              p.card-text Organiza turnos y pacientes.
              
              a.btn.btn-primary(href="/secretarios/login") INGRESAR COMO SECRETARIA
