extends ../layout.pug

block contenido
  button.btn.btn-secondary#btn-volver(type="button" onclick="history.back()") ‚Üê Volver atr√°s
  .container
    //- T√≠tulo con estilo
    h1.text-center(style="font-family: 'Roboto', sans-serif; font-weight: 700; font-size: 2.5rem; margin-bottom: 30px;")
      | #{nombre} #{apellido} - #{especialidad.nombre}

    //- Agenda de Turnos
    table.table.table-bordered
      thead
        tr
          th Fecha
          th Hora
          th Paciente
          th Motivo
          th Estado
          th Transferir turno

      tbody
        
        - let fechaActual = '';

        each item in agenda
          - let mostrarFecha = item.fecha !== fechaActual;
          - if (mostrarFecha) {
          -   fechaActual = item.fecha;
          - }

          tr(
            class= item.tipo === 'ocupado' 
              ? 'table-danger' 
              : item.tipo === 'bloqueado' 
                ? 'table-warning' 
                : 'table-success'
          )
            td= mostrarFecha ? item.fecha : '' 
            td
              | #{item.hora.includes('-') ? item.hora : item.hora.slice(0, 5)}
            td= item.paciente || 'N/A'
            td= item.motivo || 'N/A'
            td
              if item.tipo === 'ocupado'
                //span(style="color: red;") Ocupado
                span(style="color: red;") #{item.estado} 
                if item.estado === 'Reservada'
                a.btn.btn-sm.btn-warning.ml-2(
                  href=`/crear?sobreturno=1&id_turno_base=${item.id_turno}&hora=${item.hora}&fecha=${item.fecha}`

                ) ‚ûï Sobreturno

                  //a.btn.btn-sm.btn-warning.ml-2(href=`/sobreturno/nuevo?id_turno_base=${item.id_turno}`) ‚ûï Sobreturno
              else if item.tipo === 'bloqueado'
                span(style="color: orange;") Bloqueado
              else
                span(style="color: green;") Disponible
            td
              if item.tipo === 'ocupado' 
                a.btn-transfer(href=`/transfer-turno?id_turno=${item.id_turno}`) üîÑ
