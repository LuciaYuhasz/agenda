extends ../layout

block contenido
    .container
        h2 Agregar Médico
        form(action="/medicos", method="post")
            .mb-3
                label(for="nombre", class="form-label") Nombre:
                input(name="nombre", type="text", class="form-control", placeholder="Ingrese un nombre", required)
            .mb-3
                label(for="apellido", class="form-label") Apellido:
                input(name="apellido", type="text", class="form-control", placeholder="Ingrese un apellido", required)
            .mb-3
                label(for="dni", class="form-label") DNI:
                input(name="dni", type="text", class="form-control", placeholder="Ingrese DNI", required)
            .mb-3
                label(for="id_sucursal", class="form-label") Sucursal:
                select(name="id_sucursal", class="form-select", required)
                    each sucursal in sucursales
                        option(value=sucursal.id_sucursal) #{sucursal.nombre}
            .mb-3
                label(for="email", class="form-label") Email:
                input(name="email", type="email", class="form-control", placeholder="correo@gmail.com", required)
            .mb-3
                label(for="especialidades", class="form-label") Especialidades:
                select(name="especialidades", class="form-select", required)
                    each especialidad in especialidades
                        option(value=especialidad.id_especialidad) #{especialidad.nombre}
            .mb-3
                label(for="matricula", class="form-label") Matrícula:
                input(name="matricula", type="text", class="form-control", placeholder="Ingrese matrícula", required)
            button(type="submit", class="btn btn-primary") Agregar



